<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.facility.model.facility">
<class name="FacilityImp" table="facility">
		<id name="id" column="FACILITY_ID"/>
		<property name="name" type="string" column="NAME"/>
		<property name="address" type="string" column="ADDRESS"/>
		<property name="contact" type="string" column="CONTACT"/>
		<property name="date" type="string" column="BUILD_DATE"/>
		<one-to-one name="facilityDetails" class="com.facility.model.customer.FacilityDetailsImp" cascade="save-update, delete"></one-to-one>
		<one-to-one name="facilityUse" class="com.facility.model.customer.FacilityUseImp" cascade="save-update, delete"></one-to-one>
		</class>
</hibernate-mapping>